@model IEnumerable<IS403P2.Models.Mission>

@{
    ViewBag.Title = "Index";
}

<h1 class="fontchange">All Missions</h1>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.missionName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.missionPresidentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.missionAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.language)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.climate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dominantReligion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.flag)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.missionName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.missionPresidentName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.missionAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.language)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.climate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dominantReligion)
        </td>
        <td>
            <img src="@Html.DisplayFor(modelItem => item.flag)" style="width:25%"/>
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.missionID }, new { @class = "btn btn-warning" })
            @Html.ActionLink("Details", "Details", new { id=item.missionID }, new { @class = "btn btn-info" })
            @Html.ActionLink("Delete", "Delete", new { id=item.missionID }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
<p>
    @Html.ActionLink("Add Another Mission", "Create", null, new { @class = "btn btn-success" })
</p>