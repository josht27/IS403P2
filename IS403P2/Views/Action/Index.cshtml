@model IS403P2.Models.MQU
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <h1 class="fontchange">Ask the Missionaries!</h1>
    <p>Here's your opportunity to ask returned missionaries questions about the mission field.</p>
    <div class="dropdown">
        <button class="btn btn-success dropdown-toggle" type="button" data-toggle="dropdown">
            Select a Mission
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
            @foreach (var item in Model.Mission)
            {
                <li><a href="@Url.Action("Asked", "Action", new { mish = "Mexico City Chalco", prez = "Crickmore", addy = "Calle Porvenir No. 8 Colonia Centro C.P. 56600 Chalco, Estado de Mexico, Mexico", lang = "Spanish", climate = "Temperate", religion = "Catholic", flag = "~/Content/Images/flag_MX.jpg" })">@item.missionName</a></li>
            }
        </ul>
    </div>
</div>
