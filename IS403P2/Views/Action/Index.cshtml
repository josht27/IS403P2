@model IEnumerable<IS403P2.Models.Mission>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <h1 class="fontchange">Ask the Missionaries!</h1>
    <p>Here's your opportunity to ask returned missionaries questions about the mission field.</p>
    <div class="dropdown">
        <button class="btn btn-success dropdown-toggle" type="button" data-toggle="dropdown">
            Select a Mission
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
            @foreach (var item in Model)
            {
                <li><a href="@Url.Action("Asked", "Action", new { id = item.missionID })">@item.missionName</a></li>
            }
        </ul>
    </div>
</div>
