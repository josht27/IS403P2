@model IEnumerable<IS403P2.Models.MissionQuestions>

@{
    ViewBag.Title = "Index";
}

<h2 class="fontchange">All Questions</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Mission.missionName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.userEmail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.question)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.answer)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Mission.missionName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.userEmail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.question)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.answer)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.missionQuestionID }, new { @class = "btn btn-warning" })
            @Html.ActionLink("Details", "Details", new { id=item.missionQuestionID }, new { @class = "btn btn-info" })
            @Html.ActionLink("Delete", "Delete", new { id=item.missionQuestionID }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>

<p>
    @Html.ActionLink("Add a Question", "Create", null, new { @class = "btn btn-success" })
</p>