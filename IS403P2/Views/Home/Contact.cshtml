@{
    ViewBag.Title = "Contact";
}

<div class="row">
    <div class="col-md-6">
        <h1 class="fontchange">Our Information:</h1>
        <h4>Phone:</h4>
        <p>(801) 123-4567</p>
        <h4>Email:</h4>
        <p>greendragons@gmail.com</p>
    </div>
    <div class="col-md-6">
        @using (Html.BeginForm("Sign_in", "Home", FormMethod.Post, new { @class = "form-signin" }))
        {
            <h1 class="fontchange">Your Information:</h1><br />
            <label for="inputFirstName" class="sr-only">First Name</label>
            @Html.TextBox("First Name", "", new { type = "firstname", id = "inputFirstName", @class = "form-control", placeholder = "First Name", required = true, autofocus = true })<br />
            <label for="inputLastName" class="sr-only">Last Name</label>
            @Html.TextBox("Last Name", "", new { type = "lastname", id = "inputLastName", @class = "form-control", placeholder = "Last Name", required = true, autofocus = true })<br />
            <label for="inputEmail" class="sr-only">Email address</label>
            @Html.TextBox("Email address", "", new { type = "email", id = "inputEmail", @class = "form-control", placeholder = "Email address", required = true, autofocus = true })<br />
            <select name="subject">
                <option value="subject">Subject</option>
                <option value="ecuador guayaquil north">Ecuador Guayaquil North</option>
                <option value="mexico city chalco">Mexico City Chalco</option>
                <option value="south carolina columbia">South Carolina Columbia</option>
            </select><br /><br />
            <textarea name="message" rows="10" cols="50" placeholder="Input Message Here"></textarea><br />
            <br />
            <button class="btn btn-lg btn-success" type="reset">Submit</button>
        }
    </div>
</div>